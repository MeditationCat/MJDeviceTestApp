<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tsensor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tsensor_value"
            android:textSize="30sp"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tsensor"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0.00"
                android:id="@+id/textView_tsensor_data"
                android:layout_weight="0.5"
                android:textSize="50sp"
                android:padding="1dp"
                android:gravity="center|right"
                android:layout_margin="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="â„ƒ"
                android:id="@+id/textView_tsensor_unit"
                android:layout_alignBottom="@+id/editText"
                android:layout_weight="0.5"
                android:textSize="50sp"
                android:gravity="left|center"
                android:layout_margin="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/tsensor_bt_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/Success"
                android:textSize="60sp" />

            <Button
                android:id="@+id/tsensor_bt_failed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/Failed"
                android:textSize="60sp" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>